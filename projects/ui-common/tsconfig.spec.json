{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "baseUrl": ".",
    "rootDir": ".",
    "types": [
      "../../node_modules/@types/jest"
    ],
    "paths": {
      "@theseam/ui-common/*": [
        "./*/public-api"
      ]
    }
  },
  "files": [
    "./setup-jest.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts",
    "../../custom_types/**/*.d.ts",
    "../../.storybook/**/*.d.ts"
  ],
  "exclude": [
    "**/schematics/**/*",
    "**/*.cy-spec.ts"
  ]
}

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "types": [
      "jasmine",
      "node"
    ],
    "lib": [
      "dom",
      "es2018"
    ],
    "paths": {
      "@theseam/ui-common/*": [
        "./*/public-api"
      ]
    }
  },
  "files": [
    "./test.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts",
    "../../custom_types/**/*.d.ts"
  ],
  "exclude": [
    "**/schematics/**/*"
  ]
}

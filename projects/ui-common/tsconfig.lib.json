{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "types": [], // I am setting this as a reminder that ng-packagr ignores "types" and "typeRoots"
    "lib": [
      "dom",
      "es2018"
    ],
    "paths": {
      "@theseam/ui-common/*": [
        "projects/ui-common/*/public-api",
        "projects/ui-common/*.d.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "enableIvy": true // Disable if using Storybook in linked project
  },
  "files": [
    "./public_api.ts"
  ]
}

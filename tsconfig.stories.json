/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@theseam/ui-common/*": [
        "projects/ui-common/*/public-api"
      ]
    }
  },
  "include": [
    "projects/ui-common/**/*.ts"
  ],
  "exclude": [
    "projects/ui-common/**/*.spec.ts",
    "projects/ui-common/**/*.cy-spec.ts",
    "projects/ui-common/**/*.stories.ts",
    "projects/ui-common/**/stories/**/*",
    "projects/ui-common/**/_story-data/**/*",
    "projects/ui-common/**/schematics/**/*"
  ]
}
